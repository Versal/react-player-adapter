$panelWidth = 300px
$panelPadding = 10px
$panelOffset = -320px
$slideDuration = .15s

.controls
  padding $panelPadding
  position absolute
  top 0
  left 0
  width $panelWidth

.controls-enter
  left $panelOffset
  transition left $slideDuration

.controls-enter.controls-enter-active
  left 0

.controls-leave
  left 0
  transition left $slideDuration

.controls-leave.controls-leave-active
  left $panelOffset

.info
  padding $panelPadding
  position absolute
  top 0
  right 0
  width $panelWidth

  div
    text-align right

.info-enter
  right $panelOffset
  transition right $slideDuration

.info-enter.info-enter-active
  right 0

.info-leave
  right 0
  transition right $slideDuration

.info-leave.info-leave-active
  right $panelOffset
